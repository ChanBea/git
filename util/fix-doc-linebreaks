# Run this program like this:
#       perl -pi util/fix-doc-linebreaks files...
# or
#       git ls-files | grep '\.pod$' | xargs perl -pi util/fix-doc-linebreaks

use strict;
use warnings;

# Skip POD commands and indented text (usually code examples)
next if /^=/;
next if /^ /;

# Skip copyright and license text
next if /Copyright.*Reserved\./;
next if /Licensed under the Apache/;
next if /except in compliance with the License/;

# Replace "[!?.] space" with "[!?.]newline" if not preceeded by i.e. or e.g.
s/(?<!(i\.e|e\.g))\. +/.\n/ig;
s/(?<!(i\.e|e\.g))\! +/!\n/ig;
s/(?<!(i\.e|e\.g))\? +/?\n/ig;
