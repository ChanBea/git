        },
        client => {
            "MaxProtocol" => "TLSv1.2",
            "CipherString" => "ECDHE-RSA-AES128-SHA256:ECDHE-RSA-AES256-SHA384:ECDHE-RSA-CHACHA20-POLY1305",
        },
        test => {
            "ExpectedCipher" => "ECDHE-RSA-AES256-SHA384",
        },
    },
    {
        name => "cipher-server-preference-flag",
        server => {
            "MaxProtocol" => "TLSv1.2",
            "CipherString" => "[DH]:AES:*AES256-SHA",
            "Options" => "ServerPreference",
        },
        client => {
            "MaxProtocol" => "TLSv1.2",
            "CipherString" => "DEFAULT:^AES256-SHA",
        },
        test => {
            "ExpectedCipher" => "AES256-SHA",
        },
    },
);

